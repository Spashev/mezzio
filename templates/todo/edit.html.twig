{% extends "@layout/default.html.twig" %}

{% block title %}Todo{% endblock %}

{% block content %}
<center>
    <div class="modal-body m-5">
        <form action="{{ path('todo.update', {'id':task['id']}) }}">
            <input type='hidden' name='_method' value='PUT'>
            <div class="form-group">
                <input class="form-control" name="title" type="text" value="{{task['title']}}" id="exampleCheck1">
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control">{{task['description']}}</textarea>
            </div>
            <div class="form-group float-left">
                <label for="exampleInputEmail1">Status</label>

                <input name="status" type="checkbox" {{ task['status'] == 'on' ? 'checked' : '' }} id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group float-right">
                <button type="submit" class="btn btn-primary" class="float-right">Save</button>
            </div>
        </form>
    </div>
</center>
{% endblock %}